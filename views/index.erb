<html>
  <head>
  <title>The Caesar Cipher Web App</title>    
	</head>
  <body>
    
    <p>
    		<%= session[:display_string] %>
    </p>
    <p>
        <%= session[:secret_word] %>
    </p>
    <p>
        <%= session[:attempts] %>
    </p>
    <p>
        <%= session[:session_guess] %>
    </p>
    <form action='/try' method='post'>
    <input type='text' name='guess' pattern='[A-Za-z]{1}' title='Enter one letter.' autofocus required />
    <input type='submit' value='Go' />
  </form>
  </body>
</html>
